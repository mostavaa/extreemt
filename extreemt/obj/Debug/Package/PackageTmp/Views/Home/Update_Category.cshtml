@section scripts{
    <script>
        $(document).ready(function () {
            $("#btn2").click(function () {
                var element = $('#myText').val();
                $(".category > ul ").append("<li><a href=#>" + element + "<span style=float:right calss=remove> x </span>" + "</a>" + "</li>");
            });
            $('.category > ul').on('click', 'span', function () {
                $(this).closest('li').remove();
            });
        });

    </script>


}