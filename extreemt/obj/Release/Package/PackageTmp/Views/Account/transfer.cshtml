@{
    ViewBag.Title = "transfer";
}
<div class="container">
    <div class="row">
        <form class="form" method="post" action="@Url.Action("transferMoney" , "Account")">
            <label>ID</label> <input type="text" class="form-control" name="id" id="id" />
            <label>Amount</label> <input type="text" class="form-control" name="amount" id="amount" />
            <input type="submit" value="submit" class="btn btn-default"/>
        </form>
    </div>
    <div class="row">
        <div id="">
            @{
                string error = (string)ViewData["error"];
                if (error != null && error != "")
                {
                    <p>@error</p>
                }
            }
        </div>
    </div>
</div>
